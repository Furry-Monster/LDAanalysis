{
  "CRAWLER": {
    "MAX_PAGES": 50,
    "WAIT_TIME": {
      "MIN": 2,
      "MAX": 5
    },
    "LOGIN_TIMEOUT": 15,
    "RETRY_TIMES": 3,
    "USER_AGENT": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/122.0.0.0 Safari/537.36",
    "SCROLL_WAIT": {
      "MIN": 1,
      "MAX": 2
    }
  },

  "ANALYSIS": {
    "MIN_WORD_LENGTH": 2,
    "TOP_WORDS_COUNT": 200,
    "TOPIC_COUNT": 5,
    "WORDS_PER_TOPIC": 15,
    "STOPWORDS": [
      "的",
      "了",
      "和",
      "是",
      "就",
      "都",
      "而",
      "及",
      "与",
      "着",
      "或",
      "一个",
      "没有",
      "这个",
      "那个",
      "这样",
      "那样",
      "还是",
      "什么",
      "这些",
      "那些",
      "一些",
      "一样",
      "很多",
      "不是",
      "可以",
      "因为",
      "但是",
      "所以",
      "如果",
      "只是",
      "不过",
      "已经",
      "现在",
      "一直",
      "真的",
      "一下",
      "这种",
      "那种"
    ]
  },

  "VISUALIZATION": {
    "WORDCLOUD": {
      "WIDTH": 1200,
      "HEIGHT": 800,
      "MAX_WORDS": 150,
      "MAX_FONT_SIZE": 150,
      "MIN_FONT_SIZE": 10,
      "BACKGROUND_COLOR": "white",
      "PREFER_HORIZONTAL": 0.9,
      "MARGIN": 10
    },
    "TOPIC_PLOT": {
      "FIGURE_WIDTH": 12,
      "FIGURE_HEIGHT": 8,
      "DPI": 300,
      "COLORS": [
        "#FF6B6B",
        "#4ECDC4",
        "#45B7D1",
        "#96CEB4",
        "#FFEEAD",
        "#D4A5A5",
        "#9A9EAB"
      ],
      "FONT_SIZE": {
        "TITLE": 16,
        "LABEL": 12,
        "TICK": 10
      }
    }
  },

  "OUTPUT": {
    "BASE_DIR": "output",
    "KEEP_RUNS": 10,
    "ENCODING": "utf-8-sig",
    "SUBDIRS": {
      "DATA": "data",
      "VISUALIZATION": "visualization",
      "LOGS": "logs"
    },
    "FILE_NAMES": {
      "COMMENTS": "comments.txt",
      "WORD_FREQ": "word_frequencies.csv",
      "TOPIC_ANALYSIS": "topic_analysis.csv",
      "WORDCLOUD": "wordcloud.png",
      "TOPIC_DIST": "topic_distribution.png",
      "LDA_VIS": "lda_visualization.html"
    }
  },

  "LOGGING": {
    "LEVEL": "INFO",
    "FORMAT": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "DATE_FORMAT": "%Y-%m-%d %H:%M:%S",
    "FILES": {
      "ERROR": "error.log",
      "INFO": "info.log",
      "DEBUG": "debug.log"
    },
    "MAX_BYTES": 10485760,
    "BACKUP_COUNT": 5
  }
}
